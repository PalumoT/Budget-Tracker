        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	//Calculate total amount of expense for the given category
	var amount = 0;
	var transaction = new GlideAggregate("x_44552_bt_transaction");
	transaction.addQuery("category", current.category);
	transaction.addAggregate("SUM", "amount");
	transaction.query();
	
	while(transaction.next()){
		amount +=  parseFloat(transaction.getAggregate("SUM", "amount"));
	}
	
	var category = new GlideRecord("x_44552_bt_category");

	if(category.get(current.category)){
		category.spent = amount;
		category.remaining = category.planned + category.spent;
		category.update();
	}
})(current, previous);]]></script>
